<link rel="stylesheet" href="{{ '/css/style.css' | url }}">

<nav>
  <a href="../" class="nav-brand">SLOSH</a>
  <div class="nav-links">
    <a href="./" class="active">Team</a>
    <a href="../projects/">Projects</a>
    <a href="../publications/">Publications</a>
  </div>
</nav>

<div class="content-container">
<h1>Meet the Team</h1>

{% for row in team %}
<div class="team-card">
  {% if row["Image"] %}
  <img src="/images/team/{{ row['Image'] }}" alt="{{ row['First Name'] }} {{ row['Last Name'] }}" class="team-card-image">
  {% endif %}
  
  <h3>{{ row["First Name"] }} {{ row["Last Name"] }}</h3>
  
  <p><strong>Title:</strong> {{ row["Title"] }}</p>
  <p>{{ row["Description"] }}</p>
  
  {% if row["LinkedIn"] %}
  <p><a href="{{ row['LinkedIn'] }}" class="team-card-link">LinkedIn Profile</a></p>
  {% endif %}
  
  <div class="team-card-clearfix"></div>
</div>

{% endfor %}
</div>